<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_marginBottom="@dimen/size_10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mart"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_water"
                android:layout_gravity="center"
                android:layout_margin="@dimen/size_10dp"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>

                <TextView
                    android:id="@+id/tv_mart_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Air Mineral 500ml"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:textColor="@color/colorBlack"
                    android:ellipsize="end"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_mart_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 Point / Rp 5.000,-"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center" />
        <RelativeLayout
            android:id="@+id/ly_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/size_10dp">

            <ImageButton
                android:id="@+id/ib_mart_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_min_grey"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/tv_mart_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"
                android:text="0" />

            <ImageButton
                android:id="@+id/ib_mart_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_add_box"/>
        </RelativeLayout>

    <View
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorGray"/>

    <View
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorGray"/>

    </LinearLayout>
</android.support.v7.widget.CardView>