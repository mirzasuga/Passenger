<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/size_16dp"
    android:background="@drawable/shadow_primary"
    tools:context="com.stickearn.stickpass.view.waiting_driver.WaitingDriverActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieWaiting"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:lottie_fileName="phone.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/waiting"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_16dp"
        android:textSize="@dimen/size_16sp"
        android:layout_below="@+id/lottieWaiting"/>

    <Button
        android:id="@+id/btn_cancel_waiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorRed"
        android:text="@string/cancel"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>
